{
  "extends": "stylelint-config-standard",
  "configBasedir": "node_modules",
  "plugins": [
    "stylelint-scss"
  ],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["sass", "include"]
      }
    ],
    "scss/at-rule-no-unknown": null,
    "scss/operator-no-newline-after": true,
    "import-notation": null
  }
}
